{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src", // Your source TypeScript files
    },
    "lib": ["es2015"],
    "include": [
      "src/**/*.ts" // This ensures TypeScript compiles everything inside the src folder
    ],
    "exclude": [
      "node_modules"
    ]  }